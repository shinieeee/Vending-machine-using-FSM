#include <stdio.h>

enum State {
    START,
    WAIT_FOR_MONEY,
    CHOOSE_ITEM,
    DISPENSE,
    END
}; 

int main() {
    enum State state = START;
    int balance = 0;
    int price = 0;
    int choice;

    while (1) {
        switch (state) {
            case START:
                printf("\nüõí Welcome to the Vending Machine!!\n");
                state = WAIT_FOR_MONEY;
                break;

            case WAIT_FOR_MONEY:
                printf("\nYour balance: ‚Çπ%d\n", balance);
                printf("Insert money (‚Çπ5, ‚Çπ10, ‚Çπ20): ");
                int money;
                scanf("%d", &money);

                if (money == 5 || money == 10 || money == 20) {
                    balance += money;
                    state = CHOOSE_ITEM;
                } else {
                    printf("‚ùå Invalid money. Try again.\n");
                }
                break;

            case CHOOSE_ITEM:
                printf("\nAvailable items:\n");
                printf("1. Chips - ‚Çπ10\n");
                printf("2. Juice - ‚Çπ15\n");
                printf("Choose an item (1 or 2): ");
                scanf("%d", &choice);

                if (choice == 1) {
                    price = 10;
                    if (balance >= price) {
                        balance -= price;
                        printf("‚úÖ Dispensing Chips. Remaining ‚Çπ%d\n", balance);
                        state = END;
                    } else {
                        printf("‚ùå Not enough money for Chips.\n");
                        state = WAIT_FOR_MONEY;
                    }
                } else if (choice == 2) {
                    price = 15;
                    if (balance >= price) {
                        balance -= price;
                        printf("‚úÖ Dispensing Juice. Remaining ‚Çπ%d\n", balance);
                        state = END;
                    } else {
                        printf("‚ùå Not enough money for Juice.\n");
                        state = WAIT_FOR_MONEY;
                    }
                } else {
                    printf("‚ùå Invalid choice. Try again.\n");
                }
                break;

            case END:
                printf("\nDo you want to buy another item? (1 for Yes, 0 for No): ");
                int again;
                scanf("%d", &again);
                if (again == 1) {
                    state = CHOOSE_ITEM;
                } else {
                    printf("üí∞ Returning ‚Çπ%d. Thank you!\n", balance);
                    return 0;
                }
                break;

            default:
                printf("‚ùå Invalid state.\n");
                return 1;
        }
    }

    return 0;
}
